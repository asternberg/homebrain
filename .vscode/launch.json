{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Node.js with ts-node",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["ts-node"],
      "program": "${workspaceFolder}/server/src/index.ts",
      "cwd": "${workspaceFolder}/server",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/server/src/**/*.ts"]
    }
  ]
}
